<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{ BookReading.Controllers.UserController testuser = new BookReading.Controllers.UserController();

                        bool userlogeedin = testuser.CheckLoginUser();
                        if (userlogeedin)
                        {
                            <li class="active">@Html.ActionLink("Home", "Index", new { controller = "Home" })</li>
                            <li>@Html.ActionLink("Create Event", "Index", new { Controller = "Events" })</li>
                            <li>@Html.ActionLink("View My Events", "ViewMyEvent", new { Controller = "Events"  })</li>
                            <li>@Html.ActionLink("View Invitations", "Invitations", new { Controller = "Events" })</li>
 }
                        else
                        {
                            <li class="active">@Html.ActionLink("Home", "Index", new { controller = "Home"  })</li>
 } }

                    <li>@Html.ActionLink("Public Events", "PublicEvents", new { Controller = "Events"  })</li>
                    <li>@Html.ActionLink("Upcoming Events", "UpcomingEvents", new { Controller = "Events"  })</li>
                    <li>@Html.ActionLink("Past Events", "PastEvents", new { Controller = "Events"  })</li>
                    @{ if (userlogeedin)
                                    {
                                        int userId = testuser.LoggedUserId();
                                        string userRole = testuser.GetUserRole(userId);
                                        if (userRole == "A")
                                        {
                         
                                            <li>@Html.ActionLink("View All Events", "AllEvents", new { Controller = "Events" })</li> }
                                                        } }
                    @{ if (userlogeedin)
                                    {
                        <li>@Html.ActionLink("Logout", "Logout", new { Controller = "User" })</li> }
                                    else
                                    {
                        <li>@Html.ActionLink("Login", "Login", new { Controller = "User"  })</li>
                                        <li>@Html.ActionLink("Register", "Register", new { Controller = "User" })</li> } }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
